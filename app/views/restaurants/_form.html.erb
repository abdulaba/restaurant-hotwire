<%= simple_form_for restaurant, html: { class: "container d-flex flex-wrap justify-content-between align-items-center"} do |f| %>
    <div class="flex-grow-1">
        <%= f.input :name %> 
    </div>
    <div class="flex-grow-1">
        <%= f.input :address %>
    </div>
    <div class="ms-2">
        <%= f.submit restaurant.new_record? ? "Crear" : "Guardar", 
            class: "btn btn-success mt-3 "%>
        <%= link_to "Cerrar", restaurants_path, 
            class: "btn btn-secondary mt-3" %>
    </div>
<% end %>