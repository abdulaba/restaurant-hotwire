<%= turbo_frame_tag restaurant do %> 
    <div class="container d-flex justify-content-between align-items-center border p-2 ">
        <%= restaurant.name %>
        <%= restaurant.address %>
        <div>
            <%= link_to restaurant_path(restaurant), data: {turbo_method: :delete}, class: "btn btn-danger" do %>
                <i class="fa-solid fa-trash"></i>
            <% end %>
            <%= link_to edit_restaurant_path(restaurant), class: "btn btn-warning" do %>
                <i class="fa-solid fa-pencil"></i>
            <% end %>
        </div>
    </div>
<% end %> 